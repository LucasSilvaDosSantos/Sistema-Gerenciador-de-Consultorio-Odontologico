                <Label x:Name="lbOdontograma" Content="&gt; Cliente - Odontograma" Margin="59,40,0,0" VerticalAlignment="Top" FontSize="30" HorizontalAlignment="Left" />
                <Rectangle Fill="#FF7FBEE2" Margin="0,0,59,93" RadiusY="50.0" RadiusX="50.0" Stroke="Black" HorizontalAlignment="Right" Width="1206" Height="510" VerticalAlignment="Bottom"/>

                <Image x:Name="image" Margin="320,142,306,122" Source="/Imagens/odontograma_anatomico.jpg"/>

                <Grid>
                    <Grid.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="FontSize" Value="30"/>
                            <Setter Property="Height" Value="120"/>
                            <Setter Property="Content" Value=""/>
                            <Setter Property="FontWeight" Value="Bold"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#60D3D3D3"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <!--Dentes superiores da esquerda para a direita-->
                    <Label x:Name="lbdente01" Margin="333,218,947,382" Content="{Binding Odontograma.Dente01, Mode=TwoWay}" MouseLeftButtonDown="Lbdente_MouseLeftButtonDown"/>
