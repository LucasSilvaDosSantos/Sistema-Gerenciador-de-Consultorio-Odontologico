                </Grid>

                <Label x:Name="lbLegendaNaoMexido" Background="White" Content="    - Dente Inalterado" Margin="1082,535,88,164" Padding="5,0,0,0"/>
                <Label x:Name="lbLegendaTratado" Background="White" Content="X - Dente Retirado" Margin="1082,577,88,122" Foreground="Red" Padding="5,0,0,0"/>
                <Label x:Name="lbLegendaRetirado" Background="White" Content="O - Dente Tratado" Margin="1082,556,88,143" Foreground="Green" Padding="5,0,0,0"/>

                <Button x:Name="btSalvar" Content="Salvar" Margin="0,0,145,30" VerticalAlignment="Bottom" Height="35" HorizontalAlignment="Right" Width="90" Click="BtSalvar_Click"/>
                <Button x:Name="btVoltar" Content="Voltar" HorizontalAlignment="Right" Margin="0,0,40,30" VerticalAlignment="Bottom" Width="90" Height="35" />

